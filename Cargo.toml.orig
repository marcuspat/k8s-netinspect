[package]
name = "k8s-netinspect"
version = "0.1.0"
edition = "2021"
authors = ["Marcus Pat <marcus@example.com>"]
description = "A minimal Kubernetes network inspection tool for diagnosing CNI and pod connectivity"
license = "MIT"
repository = "https://github.com/marcuspat/k8s-netinspect"
homepage = "https://github.com/marcuspat/k8s-netinspect"
documentation = "https://github.com/marcuspat/k8s-netinspect"
readme = "README.md"
keywords = ["kubernetes", "networking", "cni", "diagnostics", "k8s"]
categories = ["command-line-utilities", "network-programming"]
exclude = [
    "test-*.sh",
    "*.md",
    ".swarm/",
    ".claude/",
    ".roo/",
    ".roomodes"
]

[[bin]]
name = "k8s-netinspect"
path = "src/main.rs"

[lib]
name = "k8s_netinspect"
path = "src/lib.rs"

[dependencies]
axum = "0.7"
kube = { version = "0.87", features = ["client", "runtime"] }
k8s-openapi = { version = "0.20", features = ["v1_28"] }
tokio = { version = "1.0", features = ["full"] }
colored = "2.0"
anyhow = "1.0"
clap = { version = "4.0", features = ["derive"] }
reqwest = { version = "0.11", features = ["json"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
regex = "1.0"